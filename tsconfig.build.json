{
  "extends": "./tsconfig",
  "compilerOptions": {
    "declaration": true,
    "outDir": "lib",
    "rootDir": "src",
    "noEmit": false,
    "jsx": "react-native",
    "skipLibCheck": true,
    "types": ["react-native"]
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.test.ts", "**/*.test.tsx", "**/*.spec.ts", "**/*.spec.tsx", "example/**/*"]
} 