{
  "name": "@novastera-oss/llamacpp-rn",
  "version": "0.1.0",
  "description": "React Native Turbo Module for llama.cpp integration, optimized for the New Architecture",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index.tsx",
  "source": "src/index.tsx",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "prebuilt",
    "scripts",
    "*.podspec",
    "!lib/typescript/example",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "test": "jest --passWithNoTests",
    "typescript": "tsc --noEmit",
    "typescript:example": "cd example && tsc --noEmit",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "prepare": "rimraf lib && tsc -p tsconfig.build.json",
    "release": "release-it",
    "example": "npm --prefix example",
    "bootstrap": "npm --prefix example install && npm install && npm --prefix example run pods",
    "setup-llama-cpp": "node scripts/setup-llama-cpp.js",
    "llama-status": "node scripts/setup-llama-cpp.js check",
    "llama-init": "node scripts/setup-llama-cpp.js init",
    "llama-tags": "bash scripts/llama_cpp_source.sh list-tags",
    "llama-from-source": "LLAMACPPRN_BUILD_FROM_SOURCE=true node scripts/setup-llama-cpp.js",
    "llama-prebuilt": "node scripts/setup-llama-cpp.js",
    "clean": "node scripts/setup-llama-cpp.js clean",
    "build-android": "node scripts/setup-android.js build-android",
    "build-android-external": "node scripts/setup-android.js build-android-external"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "llama.cpp",
    "llm",
    "language-model",
    "ai",
    "turbo-module",
    "new-architecture"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/novastera/llamacpp-rn.git"
  },
  "author": "Novastera <contact@novastera.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/novastera/llamacpp-rn/issues"
  },
  "homepage": "https://github.com/novastera/llamacpp-rn#readme",
  "publishConfig": {
    "access": "public"
  },
  "codegenConfig": {
    "name": "RNLlamaCppRnSpec",
    "type": "modules",
    "jsSrcsDir": "src/specs",
    "android": {
      "javaPackageName": "com.novastera.llamacpprn"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native/eslint-config": "^0.76.9",
    "@react-native/metro-config": "^0.76.9",
    "@types/jest": "^29.5.0",
    "@types/react": "^18.2.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "pod-install": "^0.1.0",
    "react": "18.3.1",
    "react-native": "0.76.9",
    "react-native-builder-bob": "^0.40.0",
    "release-it": "^19.0.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": ">=0.76.0"
  },
  "engines": {
    "node": ">= 20.0.0"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/cpp/llama.cpp/",
      "/.llamacpp-temp/",
      "/example/"
    ],
    "watchPathIgnorePatterns": [
      "/cpp/llama.cpp/",
      "/.llamacpp-temp/",
      "/example/"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|@react-native))"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    }
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
